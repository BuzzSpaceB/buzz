<div class="vertical-center">
    <div class="container">
        <div>
            <h1 class="text-center">Welcome to the <span id="buzzTitle">Buzz</span> System</h1>

            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="panel-heading">
                    <h1 class="panel-title">Please enter your login details</h1>
                </div>
                <form action="/login" method="post">
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="student number" name="email" type="email"
                                   required="required" autofocus="autofocus"/>
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="password" name="password" type="password" value=""
                                   required="required"/>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-sm btn-success">Sign in</button>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</div>
