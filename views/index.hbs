<div class="row vertical-center">
    <div class="container containerBg">
        <div>
            <div class="buzzLogin">
                <div class="text-center" id="signIn"><span class="glyphicon glyphicon-info-sign"></span> Please sign in
                </div>
                <br>
                <form action="/login" method="post">
                    <fieldset>
                        <div class="form-group">
                            <p class="text-left">Student Number</p>
                            <input class="form-control" name="email" type="email"
                                   required="required" autofocus="autofocus"/>
                        </div>
                        <div class="form-group">
                            <p class="text-left">Password</p>
                            <input class="form-control" name="password" type="password" value=""
                                   required="required"/>
                        </div>
                        <br>

                        <div class="col-md-6">
                            <div class="text-center">
                                <button type="submit" class="btn btn-sm btn-success">Need Help?</button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-center">
                                <button type="submit" class="btn btn-sm btn-success">Sign in</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
